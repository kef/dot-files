alias gsvnup='git svnup'
alias gsup='git sup'
alias gsvnci='git svnci'
alias gsci='git sci'
alias gup='git up'
alias gsreb='git sreb'
alias gsrt='git srt'
alias gsrebt='git srebt'
alias greb='git reb'
alias gbr='git br'
alias gunstage='git unstage'
alias glast='git last'
